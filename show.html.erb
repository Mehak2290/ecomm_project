<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div >
         <div class=" text-black text-center">
          <h2>User Profile</h2>
         </div>
        <div class="card-body">
          <% if flash[:notice] %>
            <div class="alert alert-success" role="alert">
              <%= flash[:notice] %>
            </div>
          <% end %>
          <% if flash[:alert] %>
            <div class="alert alert-danger" role="alert">
              <%= flash[:alert] %>
            </div>
          <% end %>
          <p class="mb-4"><strong>Email:</strong> <%= @user.email %></p>
          
          <%= form_for(@user.customer, url: user_path(@user), method: :put, html: { class: "needs-validation", novalidate: "" }) do |f| %>
            <div class="form-group mb-3">
              <%= f.label :address, "Address", class: 'form-label' %>
              <%= f.text_field :address, class: "form-control rounded-pill", placeholder: "Your address" %>
            </div>

            <div class="form-group mb-4">
              <%= f.label :province_id, "Province", class: 'form-label' %>
              <%= f.collection_select :province_id, Province.all, :id, :name, { prompt: "Select Province" }, { class: "form-control custom-select rounded-pill" } %>
            </div>

            <div class="actions text-center">
              <%= f.submit "Update Profile", class: "btn btn-primary rounded-pill" %>
            </div>
          <% end %>
         </div>
       </div>
     </div>
   </div>
</div>
